<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="25dip"
				android:tag="section">

<TextView
  		android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
        android:textColor="@color/label_text"
        android:textSize="@dimen/list_group_text_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/list_group_padding"
        android:paddingRight="@dimen/padding"
        android:id="@+id/label_extra_text" 
        android:visibility="gone"/>
        
<TextView
  		android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
        android:textColor="@color/label_text"
        android:textSize="@dimen/list_group_text_size"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:paddingTop="@dimen/list_group_padding"
        android:paddingBottom="@dimen/list_group_padding"
        android:paddingLeft="@dimen/padding"
        android:id="@+id/label_text" />
        
<ImageView android:id="@+id/refreshButton"
			android:src="@drawable/title_refresh_black"
			android:layout_centerVertical="true"
			android:layout_alignParentTop="true"
			android:layout_alignParentBottom="true"
			 android:layout_alignParentRight="true"
			 android:layout_height="15dip"
			 android:layout_width="wrap_content"
			 android:onClick="onRefreshSectionClick"
			 android:visibility="gone"/>  
        			 
</RelativeLayout>